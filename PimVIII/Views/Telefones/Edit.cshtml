@model PimVIII.Models.Telefone

@{ ViewData["Title"] = "Edit"; }

<h2>Alteração</h2>

<h4>Telefone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PessoaID" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DDD" class="control-label"></label>
                <input asp-for="DDD" class="form-control" />
                <span asp-validation-for="DDD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTelefones" class="control-label"></label>
                <select asp-for="TipoTelefones" class="form-control">
                    <option value="1">Celular</option>
                    <option value="2">Residencial</option>
                    <option value="3">Comercial</option>
                </select>
                <span asp-validation-for="TipoTelefones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>
